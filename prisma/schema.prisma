generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User{ 
  userId String @id 
  currency String
}

model Category{
  createdAt DateTime @default(now())
  name String
  icon String
  type String @default("income")
  userId String

  @@unique([name,userId,type])
}

model Transaction{
  id String @id @default(uuid())
  type String @default("income")
  amount Float
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  date DateTime 
  Category String
  CategoryIcon String
  userId String
}

model MonthHistory{
  userId String 
  day Int
  month Int
  year Int
  income Float
  expense Float

  @@id([day,month,year,userId])
}

model YearHistory{
  userId String 
  month Int
  year Int
  income Float
  expense Float

  @@id([month,year,userId])
}